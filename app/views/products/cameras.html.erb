<div id="banner" >
  <%= image_tag("logo.jpg") %>
  
</div>

<div id="product_list" >

  <h1>Product Listing</h1>

  <table>
    <thead>
      <tr>
        <th>Product ID</th>
        <th>Category</th>
        <th>Product Name</th>
        <th></th>
        <th colspan="6"></th>
      </tr>
    </thead>

    <tbody>
      <% @cameras.each do |cameras| %>
        <tr class=" <%= cycle('list_line_odd' , 'list_line_even' ) %>" >
          <td><%= cameras.productID %></td>
          <td><%= cameras.category %></td>
          <td><%= cameras.product_name %></td>
          <td></td>
          <td class="list_actions" >
          <%= link_to 'Show', cameras %>
          <%= link_to 'Edit', edit_product_path(cameras) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <p> </p>
</div>

