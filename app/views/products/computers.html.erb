<div id="banner" >
  <%= image_tag("logo.jpg") %>
  
</div>

<div id="product_list" >

  <h1>Computers and Tablets</h1>

  <table>
    <thead>
      <tr>
        <th>Product ID</th>
        <th>Product Name</th>
        <th></th>
        <th colspan="6"></th>
      </tr>
    </thead>

    <tbody>
      <% @computers.each do |computers| %>
        <tr class=" <%= cycle('list_line_odd' , 'list_line_even' ) %>" >
          <td><%= computers.productID %></td>
          <td><%= link_to computers.product_name, computers %></td>
          <td class="list_actions" >
          <%= link_to 'Edit', edit_product_path(computers) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <p> <%= link_to '2', :action => "computersoffset" %></p>
</div>

